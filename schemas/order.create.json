{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create Order Request",
  "type": "object",
  "required": ["customer", "items", "total"],
  "properties": {
    "customer": {
      "type": "object",
      "required": ["email", "name"],
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "Customer email address"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Customer full name"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$",
          "description": "Optional customer phone number"
        }
      },
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "type": "object",
        "required": ["sku", "name", "qty", "price"],
        "properties": {
          "sku": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "Product SKU"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Product name"
          },
          "qty": {
            "type": "integer",
            "minimum": 1,
            "maximum": 999,
            "description": "Quantity ordered"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "multipleOf": 0.01,
            "description": "Unit price in dollars"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "description": "Optional product description"
          }
        },
        "additionalProperties": false
      }
    },
    "total": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01,
      "description": "Total order amount in dollars"
    },
    "currency": {
      "type": "string",
      "enum": ["USD", "EUR", "GBP", "CAD"],
      "default": "USD",
      "description": "Order currency"
    },
    "notes": {
      "type": "string",
      "maxLength": 1000,
      "description": "Optional order notes"
    }
  },
  "additionalProperties": false
}
