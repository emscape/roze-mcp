{
  "name": "roze-mcp",
  "version": "1.0.0",
  "description": "MCP Bridge Server for Roze - Exposes shared tools for VS Code windows",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "check:schemas": "ts-node scripts/validate-schemas.ts",
    "prestart": "npm run build"
  },
  "keywords": [
    "mcp",
    "bridge",
    "roze",
    "api"
  ],
  "author": "Roze Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "firebase-admin": "^13.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
